<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBlack"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/start_button_wrapper"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SAFE RETURN PROJECT"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="안전 귀가 프로젝트"
            android:textSize="20sp"
            android:textColor="@android:color/white"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/start_button_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:gravity="center">
        <Button
            android:id="@+id/start_btn"
            android:layout_width="300dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:text="START"
            android:textSize="25sp"
            android:textColor="@android:color/white"
            android:drawableRight="@drawable/ic_arrow"
            android:background="#92252B"
            android:paddingRight="20dp"
            android:layout_marginBottom="20dp"/>
        <Button
            android:id="@+id/setting_btn"
            android:layout_width="300dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:paddingRight="20dp"
            android:text="설정"
            android:textSize="25sp"
            android:textColor="@android:color/white"
            android:drawableRight="@drawable/ic_setting"
            android:background="#64AEBA"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>